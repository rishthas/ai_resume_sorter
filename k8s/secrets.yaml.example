# This is an example file. DO NOT commit the actual secrets.yaml file!
# Copy this to secrets.yaml and fill in your actual base64-encoded values

# To encode a value to base64:
# echo -n "your-value-here" | base64

apiVersion: v1
kind: Secret
metadata:
  name: resume-sorter-secrets
  namespace: resume-sorter
type: Opaque
data:
  # Django secret key (base64 encoded)
  SECRET_KEY: "<base64-encoded-django-secret-key>"

  # OpenAI API key (base64 encoded)
  OPENAI_API_KEY: "<base64-encoded-openai-api-key>"

  # Database credentials (base64 encoded)
  DATABASE_URL: "<base64-encoded-postgresql-url>"
  # Example: postgresql://username:password@rds-endpoint.amazonaws.com:5432/dbname

  DB_NAME: "<base64-encoded-db-name>"
  DB_USER: "<base64-encoded-db-user>"
  DB_PASSWORD: "<base64-encoded-db-password>"
  DB_HOST: "<base64-encoded-rds-endpoint>"
