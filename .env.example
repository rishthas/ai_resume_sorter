# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# AI Model Configuration (optional, defaults to gpt-3.5-turbo)
MODEL=gpt-3.5-turbo

# Django Configuration
# Django Secret Key (generate a secure one for production)
SECRET_KEY=your-secret-key-here

# Django Debug Mode (set to False in production)
DEBUG=True

# Allowed Hosts (comma separated, for production)
# For local development, use '*' or leave empty
# For Heroku production, use: your-app-name.herokuapp.com
ALLOWED_HOSTS=*

# Database Configuration
# For local development, this will use SQLite by default
# For Heroku, DATABASE_URL is automatically set by PostgreSQL addon
# DATABASE_URL=postgres://user:password@host:port/dbname
